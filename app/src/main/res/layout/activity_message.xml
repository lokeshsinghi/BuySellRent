<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/layout_top"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_dp"
            android:layout_width="50dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="User"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="online"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/message_recycler"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"


        android:src="@drawable/callback"
        android:visibility="visible" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/underline"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout_top"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/message_recycler"
        android:layout_marginTop="5dp"
        android:padding="5dp"

        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/layout_top">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_textmessage"
        android:id="@+id/layout_bottom"
        android:padding="5dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_message"
            android:hint="Type a message"


            android:textCursorDrawable="@drawable/theme_color"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/send_chat"/>

        <ImageView
            android:id="@+id/send_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/send" />

    </RelativeLayout>


</RelativeLayout>