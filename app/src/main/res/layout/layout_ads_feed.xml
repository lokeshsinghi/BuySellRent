<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:id="@+id/adLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:padding="4dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/adImage"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:id="@+id/adTitle"
                android:layout_toRightOf="@id/adImage"
                android:textColor="#000"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"
                />
            <org.fabiomsr.moneytextview.MoneyTextView
                android:layout_width="wrap_content"
                android:id="@+id/adPrice"
                android:layout_height="wrap_content"
                app:baseTextSize="16sp"
                android:layout_marginTop="10dp"
                app:symbol="‎रू"
                app:decimalSeparator="."
                app:symbolGravity="start"
                app:amount="5400"
                app:symbolMargin="3sp">
            </org.fabiomsr.moneytextview.MoneyTextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/quantum_grey"
                android:textSize="12dp"
                android:id="@+id/adLocation"
                android:text="New Road, Kathmandu"
                android:drawableLeft="@drawable/location_icon"></TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
